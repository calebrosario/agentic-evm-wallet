{
  "name": "agentic-evm-wallet",
  "version": "0.1.0",
  "description": "Agentic EVM blockchain wallet for AI agents with Viem",
  "main": "./dist/index.ts",
  "types": "./dist/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run src/index.ts",
    "mcp": "bun run src/mcp/server.ts",
    "faucet": "bun run scripts/faucet.ts",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docs": "typedoc src --out dist/docs --excludePrivate",
    "clean": "rm -rf dist",
    "precommit": "bun run typecheck && bun run lint && bun run test:unit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "abitype": "^1.0.0",
    "viem": "^2.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "^1.1.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0",
    "typedoc": "^0.26.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "bin": {
    "agentic-evm-wallet-mcp": "./dist/mcp/server.js"
  },
  "keywords": [
    "evm",
    "blockchain",
    "wallet",
    "agent",
    "ai",
    "ethereum",
    "polygon",
    "viem",
    "web3",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Agentic EVM Wallet Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/agentic-evm-wallet.git"
  }
}
