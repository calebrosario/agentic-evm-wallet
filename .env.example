# ETHEREUM_RPC_URL=https://ethereum.publicnode.com

# Polygon
# POLYGON_RPC_URL=https://polygon.drpc.org

# BNB Smart Chain
# BSC_RPC_URL=https://bsc-dataseed.bnbchain.org

# Arbitrum One
# ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Optimism
# OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Avalanche C-Chain
# AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Base
# BASE_RPC_URL=https://mainnet.base.org

# zkSync Era
# ZKSYNC_RPC_URL=https://mainnet.era.zksync.io/http

# Fantom
# FANTOM_RPC_URL=https://rpc.ftm.tools

# Gnosis
# GNOSIS_RPC_URL=https://rpc.gnosischain.com

# Security Configuration
# Generate a secure 32-byte hex key: bun run -e "console.log(crypto.randomUUID().replace(/-/g, '').slice(0, 64))"
# ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Rate Limiting for MCP Server
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=60000

# Transaction Limits (Future: for approval workflow)
# MAX_TRANSACTION_SIZE_USD=100
# DAILY_SPENDING_LIMIT_USD=1000
# MAX_TRANSACTIONS_PER_HOUR=10

# Testnet Faucet Automation
# JSON array of test wallet addresses to automatically fund
# TEST_WALLET_ADDRESSES=["0x1234...", "0x4567..."]

# Minimum balance (in ETH) before triggering faucet
# FAUCET_MIN_BALANCE=0.01

# Amount to request from faucet (in ETH)
# FAUCET_AMOUNT=0.1
